FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    unzip \
    xz-utils \
    zip \
    libglu1-mesa \
    ca-certificates \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install Flutter
RUN git clone https://github.com/flutter/flutter.git -b stable /opt/flutter
ENV PATH="/opt/flutter/bin:${PATH}"

# Pre-configure Flutter
RUN flutter doctor
RUN flutter precache
RUN flutter config --enable-web

WORKDIR /app

# Create env directory for developer info
RUN mkdir -p env

# Copy pubspec files first (for better Docker layer caching)
COPY pubspec.yaml pubspec.lock ./

# Install Flutter dependencies
RUN flutter pub get

# Copy source code
COPY . .

# Create developer info file with build args
ARG DEVELOPER_IDENTIFIER=yocombi-dev
ARG GIT_COMMIT_HASH=local-dev
ARG GIT_BRANCH=develop
ARG BUILD_VARIANT=yocombi-dev
ARG API_BASE_URL=http://184.174.39.92:8081/v1

RUN echo "DEVELOPER_IDENTIFIER=${DEVELOPER_IDENTIFIER}" > env/developer_info.env && \
    echo "GIT_COMMIT_HASH=${GIT_COMMIT_HASH}" >> env/developer_info.env && \
    echo "GIT_BRANCH=${GIT_BRANCH}" >> env/developer_info.env && \
    echo "BUILD_VARIANT=${BUILD_VARIANT}" >> env/developer_info.env && \
    echo "API_BASE_URL=${API_BASE_URL}" >> env/developer_info.env

# Create API configuration
# Create directories if they don't exist
RUN mkdir -p lib/config

# Create API configuration
RUN echo "const String apiBaseUrl = '${API_BASE_URL}';" > lib/config/api_config.dart
# Expose development port
EXPOSE 8080

# Development command with hot reload
CMD ["flutter", "run", "-d", "web-server", "--web-port=8080", "--web-hostname=0.0.0.0", "--hot"]
